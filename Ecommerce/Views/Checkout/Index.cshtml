@model List<Ecommerce.Models.CheckoutViewModel>
@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>
<div class="row checkoutWrap">
    @if (Model != null && Model.Any())
    {
    <div class="col-md-6 bag">
        <h3>In your cart</h3>
        <button>@Html.ActionLink("Edit your cart", "Index", "Cart")</button>
        @foreach (var product in Model)
        {
            <div class="row checkoutLineWrap">
                <p>@product.Qty</p>
                <p class="productLine">@product.Title</p>
                <p>$@(product.Price * product.Qty)</p>
            </div>
        }
        <h4 class="checkoutSum">Sum: $@ViewBag.Sum</h4>
    </div>
    <div class="col-md-6 info">
        <h3>Your Information</h3>

        @using (Html.BeginForm("SubmitOrder", "Checkout"))
        {
            <div>
                <label for="firstName">First Name: </label>
                <input type="text" name="firstName" />
            </div>
            <div>
                <label for="lastName">Last Name: </label>
                <input type="text" name="lastName" />
            </div>
            <div>
                <label for="email">Email: </label>
                <input type="text" name="email" />
            </div>
            <div>
                <label for="phone">Phone: </label>
                <input type="text" name="phone" />
            </div>
            <div>
                <label for="street">Street: </label>
                <input type="text" name="street" />
            </div>
            <div>
                <label for="postalCode">Postal Code: </label>
                <input type="text" name="postalCode" />
            </div>
            <div>
                <label for="city">City: </label>
                <input type="text" name="city" />
            </div>

            <div class="placeOrder" >
                <input type="Submit" value="Place Order" />
            </div>


        }
    </div>
    } else
    {
        <h4 class="letsShop">There's nothing to checkout yet. @Html.ActionLink("Lets pick out some nice vinyl!", "Index", "Products")</h4>
    }
</div>